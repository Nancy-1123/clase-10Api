---
<Layout title="Personajes">
    <main class="main">
        
<!-- Data fetched at build can be rendered in HTML -->
<div class="content">
	<div class="bg-shape">
		<img src="https://res.cloudinary.com/muhammederdem/image/upload/q_60/v1536405214/starwars/logo.webp" alt="">
	  </div>
	<h1> Información del Personaje </h1>
	<h2>Nombre: {data.name}</h2>
	<p>Altura: {data.height}</p>
	<p>Peso: {data.mass}</p>
	<p>Color de cabello: {data.hair_color}</p>
	<p>Color de ojos: {data.eye_color}</p>
	<p>Género: {data.gender}</p>
	<p>Año de nacimiento: {data.birth_year}</p>
	<ul>{
			peliculas.map((tema) => {
			return <li>{tema}</li>;
			})
		}
	  </ul>
	</div>
</main>

</Layout>
